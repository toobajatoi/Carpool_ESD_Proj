@model IEnumerable<Carpool_DB_Proj.Models.Notification>
@using Carpool_DB_Proj.Models

@{
    ViewData["Title"] = "Notifications";
    Layout = "_Layout";
    // Safely read the session user id set by controller
    int? currentUserId = null;
    if (ViewBag.SessionUserId != null)
    {
        try { currentUserId = (int)ViewBag.SessionUserId; } catch { currentUserId = null; }
    }
}

<h1>Notifications</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="list-group">
        @* Get dictionaries attached by controller *@
        @{
            var rideRequestDict = ViewBag.RideRequestDict as Dictionary<int, object>;
            var messageDict = ViewBag.MessageDict as Dictionary<int, object>;
        }

        @foreach (var notification in Model)
        {
            // Lookup related objects safely from dictionaries
            var rideRequest = (rideRequestDict != null && rideRequestDict.ContainsKey(notification.NotificationId))
                                ? rideRequestDict[notification.NotificationId] as RideRequest
                                : null;
            var message = (messageDict != null && messageDict.ContainsKey(notification.NotificationId))
                                ? messageDict[notification.NotificationId] as Message
                                : null;

            var isRideRequest = notification.RelatedEntityType == "RideRequest" && rideRequest != null;
            var isMessage = notification.RelatedEntityType == "Message" && message != null;
            
            <div class="list-group-item @(notification.IsRead ? "" : "list-group-item-primary border-start border-primary border-3")" 
                 data-notification-id="@notification.NotificationId"
                 style="@(notification.IsRead ? "" : "background-color: #f0f8ff;")">
                <div class="d-flex w-100 justify-content-between align-items-start">
                    <div class="flex-grow-1">
                        <div class="d-flex align-items-center mb-2">
                            @if (!notification.IsRead)
                            {
                                <span class="badge bg-danger me-2">New</span>
                            }
                            <h5 class="mb-0">@notification.Title</h5>
                        </div>
                        
                        @if (isMessage && message?.Sender != null)
                        {
                            <p class="mb-2">
                                <strong>@message.Sender.Name:</strong> 
                                <em>"@(message.Content != null && message.Content.Length > 50 ? message.Content.Substring(0, 50) + "..." : message.Content)"</em>
                            </p>
                        }
                        else if (isRideRequest)
                        {
                            var requester = rideRequest?.Requester;
                            var driver = rideRequest?.Driver;
                            var otherUser = currentUserId.HasValue && rideRequest != null && currentUserId == rideRequest.DriverId ? requester : driver;
                            
                            <p class="mb-2">
                                @if (otherUser != null)
                                {
                                    <strong>@otherUser.Name</strong>
                                    @if (rideRequest != null && currentUserId.HasValue && currentUserId == rideRequest.DriverId)
                                    {
                                        <span> requested a ride from you.</span>
                                    }
                                    else
                                    {
                                        <span> accepted your ride request.</span>
                                    }
                                }
                                else
                                {
                                    @notification.Message
                                }
                            </p>
                            
                            @if (rideRequest != null && currentUserId.HasValue && currentUserId == rideRequest.DriverId && rideRequest.Status != "Accepted" && rideRequest.Status != "Rejected")
                            {
                                <div class="mt-2">
                                    <form asp-action="AcceptRideRequest" method="post" class="d-inline">
                                        <input type="hidden" name="requestId" value="@rideRequest.RequestId" />
                                        <button type="submit" class="btn btn-success btn-sm me-2" onclick="return confirm('Accept this ride request?')">
                                            ✓ Accept
                                        </button>
                                    </form>
                                    <form asp-action="RejectRideRequest" method="post" class="d-inline">
                                        <input type="hidden" name="requestId" value="@rideRequest.RequestId" />
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Reject this ride request?')">
                                            ✗ Reject
                                        </button>
                                    </form>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="mb-2">@notification.Message</p>
                        }
                        
                        <small class="text-muted">
                            <span class="badge bg-@(notification.Type == "Error" ? "danger" : notification.Type == "Warning" ? "warning" : notification.Type == "Success" ? "success" : "info")">
                                @notification.Type
                            </span>
                            <span class="ms-2">@notification.CreatedDate.ToString("MMM dd, yyyy HH:mm")</span>
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <p>You have no notifications.</p>
    </div>
}

<div class="mt-3">
    <a asp-action="Main_Page" class="btn btn-secondary">Back to Main Page</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Mark notification as read on click (ignore clicks on buttons inside)
            $('.list-group-item').on('click', function(e) {
                if ($(e.target).is('button') || $(e.target).closest('button').length > 0) {
                    return;
                }

                const notificationId = $(this).data('notification-id');
                const item = $(this);

                // If already marked as read, do nothing
                if (!notificationId || item.hasClass('read')) {
                    return;
                }

                // Only mark if notification visually appears unread (you use list-group-item-primary to indicate unread)
                if (notificationId && item.hasClass('list-group-item-primary')) {
                    $.ajax({
                        url: '/Home/MarkNotificationRead',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify({ notificationId: parseInt(notificationId) }),
                        success: function(response) {
                            if (response && response.success) {
                                item.removeClass('list-group-item-primary');
                                item.removeClass('border-start border-primary border-3');
                                item.css('background-color', '');
                                item.find('.badge.bg-danger').remove();
                                item.addClass('read');
                                // Update badge count
                                checkForNewNotifications();
                            }
                        },
                        error: function(xhr, status, error) {
                            console.error('Error marking notification read:', error);
                        }
                    });
                }
            });

            // Poll for new notifications every 5 seconds
            setInterval(function() {
                checkForNewNotifications();
            }, 5000);

            // initial badge fetch
            checkForNewNotifications();
        });

        function checkForNewNotifications() {
            $.ajax({
                url: '/Home/GetUnreadNotificationCount',
                type: 'GET',
                success: function(response) {
                    if (response && response.count !== undefined) {
                        updateNotificationBadge(response.count);
                    }
                },
                error: function() {
                    // Silently fail
                }
            });
        }

        function updateNotificationBadge(count) {
            // Update badge in navigation
            const navLink = $('.nav-link[href*="Notifications"]');
            let badge = navLink.find('.badge');
            if (count !== undefined) {
                if (count > 0) {
                    if (badge.length) {
                        badge.text(count);
                    } else {
                        navLink.append(' <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">' + count + '</span>');
                    }
                } else {
                    badge.remove();
                }
            }
        }
    </script>
}
