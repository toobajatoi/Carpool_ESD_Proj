@model IEnumerable<Carpool_DB_Proj.Models.FavoriteRide>

@{
    ViewData["Title"] = "Favorite Rides";
    Layout = "_Layout";
}

<h1>Favorite Rides</h1>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var favorite in Model)
        {
            if (favorite != null && favorite.Ride != null)
            {
                var ride = favorite.Ride;
                var driver = ride.User;
                
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@(driver?.Name ?? "Unknown Driver")</h5>
                            <p class="card-text">
                                <strong>Route:</strong> @ride.Routes<br />
                                <strong>Fare:</strong> Rs. @ride.Fare<br />
                                <strong>Available Seats:</strong> @ride.AvailableSeats<br />
                                <strong>Leaving Time:</strong> @ride.LeavingTime<br />
                                <strong>Class Time:</strong> @ride.ClassTime
                            </p>
                            <a asp-action="BookRide" asp-route-rideid="@ride.RideId" class="btn btn-primary">Book Now</a>
                            <small class="text-muted d-block mt-2">Added on @favorite.CreatedDate.ToString("MMM dd, yyyy")</small>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <p>You haven't added any rides to favorites yet. Browse rides and click the favorite button to save them!</p>
    </div>
}

<div class="mt-3">
    <a asp-action="Main_Page" class="btn btn-secondary">Back to Main Page</a>
</div>
