    <!-- Navigation -->
    <nav style="background-color: #f8f9fa; padding: 10px 0;">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <img src="~/images/Fastlogo.png" alt="Logo" width="30" height="24" style="margin-right: 10px;">
                <span style="font-weight: bold;">FastCarpool</span>
            </div>
            <div class="d-flex gap-3">
                <a asp-controller="Home" asp-action="Main_Page" style="text-decoration: none; color: #333;">Home</a>
                <a asp-controller="Home" asp-action="Register_Car" style="text-decoration: none; color: #333;">Register Car</a>
                <a asp-controller="Home" asp-action="BookRide" style="text-decoration: none; color: #333;">Book Ride</a>
                <div class="dropdown">
                    <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown" style="text-decoration: none; color: #333;">
