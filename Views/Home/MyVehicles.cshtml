@model IEnumerable<Carpool_DB_Proj.Models.Vehicle>

@{
    ViewData["Title"] = "My Vehicles";
    Layout = "_Layout";
}

<h1>My Vehicles</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<a asp-action="AddVehicle" class="btn btn-primary mb-3">Add New Vehicle</a>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Make</th>
                <th>Model</th>
                <th>Year</th>
                <th>License Plate</th>
                <th>Color</th>
                <th>Capacity</th>
                <th>Type</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in Model)
            {
                <tr>
                    <td>@vehicle.Make</td>
                    <td>@vehicle.Model</td>
                    <td>@vehicle.Year</td>
                    <td>@vehicle.LicensePlate</td>
                    <td>@(vehicle.Color ?? "N/A")</td>
                    <td>@vehicle.Capacity</td>
                    <td>@(vehicle.VehicleType ?? "N/A")</td>
                    <td>
                        @if (vehicle.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </td>
                    <td>
                        <a asp-action="EditVehicle" asp-route-id="@vehicle.VehicleId" class="btn btn-sm btn-primary me-2">Edit</a>
                        <form asp-action="DeleteVehicle" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this vehicle?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="vehicleId" value="@vehicle.VehicleId" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <p>You haven't added any vehicles yet. Add a vehicle to start offering rides.</p>
    </div>
}

<div class="mt-3">
    <a asp-action="Main_Page" class="btn btn-secondary">Back to Main Page</a>
</div>
